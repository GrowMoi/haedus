h2 = t "devise.change_password"

= form_for(resource, as: resource_name, url: user_password_path, html: { method: :put }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token

  .field
    = f.label :password, t("devise.new_password")
    = f.password_field :password, autofocus: true, autocomplete: "off"

  .field
    = f.label :password_confirmation, t("devise.confirm_new_password")
    = f.password_field :password_confirmation, autocomplete: "off"

  .actions
    = f.submit t("devise.change_password"), data: { disable_with: t("devise.change_password") }

= render "devise/shared/links"
