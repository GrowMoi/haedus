$("<%= j render(partial: 'client', collection: clients) %>")
  .appendTo($("#list-clients"));

// Update pagination link
<% if clients.last_page? %>
  $('.pagination').html('');
<% else %>
  $('.pagination')
    .html("<%= j link_to('next', params.merge(page: params[:page].to_i + 1), rel: 'next') %>");
<% end %>
